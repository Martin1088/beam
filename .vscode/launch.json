    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'proxy'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=proxy",
                    "--package=proxy"
                ],
                "filter": {
                    "name": "proxy",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "BROKER_URL": "http://broker:8080",
                "PKI_ADDRESS": "http://vault:8200",
                "APP_0_ID": "app1",
                "APP_0_KEY": "App1Secret",
                "NO_PROXY": "vault,broker",
                "no_proxy": "vault,broker",
                "PKI_APIKEY_FILE": "dev/pki/pki.secret",
                "PROXY_ID": "proxy2.broker",
                "PRIVKEY_FILE": "dev/pki/proxy2.priv.pem",
                "BIND_ADDR": "0.0.0.0:8082",
                "all_proxy": "",
                "ALL_PROXY": "",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'proxy'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=proxy",
                    "--package=proxy"
                ],
                "filter": {
                    "name": "proxy",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'shared'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=shared"
                ],
                "filter": {
                    "name": "shared",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'broker'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=broker",
                    "--package=broker"
                ],
                "filter": {
                    "name": "broker",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'broker'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=broker",
                    "--package=broker"
                ],
                "filter": {
                    "name": "broker",
                    "kind": "bin"
