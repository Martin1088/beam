        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'tests'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=tests"
                ],
                "filter": {
                    "name": "tests",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
